<section class="main-section order_tabs order_item_list_tabs">
  <div class="row">
    <div class="small-12 columns tab_row">
      <dl class="tabs" data-tab>
        {{#link-to 'orders.contact_summary' model.id tagName="dd" classNames="small-6 medium-6 columns text-center"}}
          {{#link-to 'orders.contact_summary' model.id}}
            <div>{{t 'order_summary_tabs.contact'}}</div>
          {{/link-to}}
        {{/link-to}}

        {{#link-to 'orders.client_summary' model.id tagName="dd" id="client_tab" classNames="small-6 medium-6 columns text-center"}}
          {{#link-to 'orders.client_summary' model.id}}
            <div>{{t "order_summary_tabs.client"}}</div>
          {{/link-to}}
        {{/link-to}}
      </dl>
    </div>
  </div>
</section>
