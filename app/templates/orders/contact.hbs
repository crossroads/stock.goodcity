<nav class="tab-bar order_fixed_header">
  <section class="left-small">
    {{#link-to 'orders.detail' model.id classNames="back"}}
      <i class="back_icon" aria-hidden="true">{{fa-icon 'angle-left'}}</i>
      <div>{{t "back"}}</div>
    {{/link-to}}
  </section>

  <section class="middle tab-bar-section">
    <h1 class="title">Contact</h1>
  </section>

</nav>

<section class="main-section order_page">
  {{#if model.isGoodCityOrder}}
    <div class="row ">
      <div class="small-12 columns main_details contact_details">
        <div class="row">
          <div class="small-5 columns">
            Name:
          </div>
          <div class="small-7 columns name">
            {{model.submittedBy.fullName}}
          </div>
        </div>

        <div class="row">
          <div class="small-5 columns">
            Phone Number:
          </div>
          <div class="small-7 columns mobile">
            {{model.submittedBy.mobile}}
          </div>
        </div>

        <div class="row">
          <div class="small-5 columns">
            Email:
          </div>
          <div class="small-7 columns email">
            {{model.submittedBy.email}}
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="row ">
      <div class="small-12 columns main_details">
        <div class="row">
          <div class="small-5 columns">
            Name:
          </div>
          <div class="small-7 columns">
            {{contact.fullName}}
          </div>
        </div>

        {{#if contact.phoneNumber}}
          <div class="row">
            <div class="small-5 columns">
              Phone Number:
            </div>
            <div class="small-7 columns">
              {{contact.phoneNumber}}
            </div>
          </div>
        {{/if}}

        {{#if contact.mobilePhoneNumber}}
          <div class="row">
            <div class="small-5 columns">
              Mobile Number:
            </div>
            <div class="small-7 columns">
              {{contact.mobilePhoneNumber}}
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  {{/if}}

</section>
