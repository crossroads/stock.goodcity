<nav class="tab-bar order_fixed_header">
  <section class="left-small">
    {{#link-to 'orders.detail' model.id classNames="back"}}
      <i class="back_icon" aria-hidden="true">{{fa-icon 'angle-left'}}</i>
      <div>{{t "back"}}</div>
    {{/link-to}}
  </section>

  <section class="middle tab-bar-section">
    <h1 class="title">Client</h1>
  </section>

</nav>

<section class="main-section order_page">

  <div class="row ">
    <div class="small-12 columns main_details">
      <div class="row">
        <div class="small-5 columns">
          Name:
        </div>
        <div class="small-7 columns">
          {{client.clientName}}
        </div>
      </div>

      {{#if client.hkidNumber}}
        <div class="row">
          <div class="small-5 columns">
            HKID Number:
          </div>
          <div class="small-7 columns">
            {{client.hkidNumber}}
          </div>
        </div>
      {{/if}}

      {{#if client.referenceNumber}}
        <div class="row">
          <div class="small-5 columns">
            Reference Number:
          </div>
          <div class="small-7 columns">
            {{client.referenceNumber}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>

</section>
