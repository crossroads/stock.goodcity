<nav class="tab-bar order_fixed_header">
  <section class="left-small">
    {{#link-to 'orders.detail' model.id classNames="back"}}
      <i class="back_icon" aria-hidden="true">{{fa-icon 'angle-left'}}</i>
      <div>{{t "back"}}</div>
    {{/link-to}}
  </section>

  <section class="middle tab-bar-section">
    <h1 class="title">Purposes</h1>
  </section>

</nav>

<section class="main-section order_page">

  <div class="row ">
    <div class="small-12 columns main_details">
      <div class="row">
        <div class="small-4 large-4 columns">
          Description:
        </div>
        <div class="small-8 large-8 columns">
          {{apply-line-break model.purposeDescription}}
        </div>
      </div>

      <div class="row">
        <div class="small-4 large-4 columns">
          Purpose:
        </div>
        <div class="small-8 large-8 columns">
          {{#each model.ordersPurposes as |orderPurpose index|}}
            {{orderPurpose.purpose.nameEn}} {{if (is-last-word-in-array model.ordersPurposes.length index) ',' ''}}
          {{/each}}
        </div>
      </div>

    </div>
  </div>

</section>
