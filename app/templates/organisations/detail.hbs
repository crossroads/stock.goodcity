{{partial 'organisations/nav_bar'}}

<section class="main-section">
  {{partial 'organisations/organisation_tabs'}}

  <div class="row">
    <div class="small-4 columns">
      {{t 'organisation.name'}}:
    </div>
    {{#if model.nameEn}}
      <div class="small-8 columns">
        {{apply-line-break model.nameEn}}
      </div>
    {{/if}}
    {{#if model.nameZhTw}}
      <div class="small-8 columns">
        {{apply-line-break model.nameZhTw}}
      </div>
    {{/if}}
  </div>

  <div class="row">
    <div class="small-4 columns">
      {{t 'organisation.description'}}:
    </div>
    {{#if model.descriptionEn}}
      <div class="small-8 columns">
        {{apply-line-break model.descriptionEn}}
      </div>
    {{/if}}
    {{#if model.descriptionZhTw}}
      <div class="small-8 columns">
        {{apply-line-break model.descriptionZhTw}}
      </div>
    {{/if}}
  </div>

  <div class="row">
    <div class="small-4 columns">
      {{t 'organisation.registration'}}:
    </div>
    <div class="small-8 columns">
      <a href= {{model.website}} target="_blank">
        {{apply-line-break model.registration}}
        <i aria-hidden="true">{{fa-icon 'external-link'}}</i>
      </a>
    </div>
  </div>
</section>
