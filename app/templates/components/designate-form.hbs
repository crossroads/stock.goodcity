<a {{action 'displayDesignateOverlay'}}>{{yield}}</a>

{{#message-box btn1Text=(t "okay") isVisible=displayAlertOverlay classNames="popupOverlay designate-form"}}
  {{#if (is-and item.isSet (is-equal item.isSet (is-equal item.isSet returnsDesignateFullSet)))}}
    <p>{{t "designate.already_designated" code=order.code}}</p>
    {{#each item.setItem.items as |item|}}
      {{partial 'items/set_item_block'}}
    {{/each}}
  {{else}}
    <p>{{t "designate.already_designated" code=order.code}}</p>
    {{partial 'orders/item_block_without_link'}}
  {{/if}}
{{/message-box}}

{{#message-box btn1Text=(t "okay") btn1Callback=(action "designatePartialItem") btn2Text=(t "cancel") isVisible=partialDesignatedConfirmationPopUp classNames="popupOverlay designate-form"}}

  {{#if (is-and item.isSet (is-equal item.isSet (is-equal item.isSet returnsDesignateFullSet)))}}
    <p>{{t "designate.partial_designate_title" code=order.code qty=totalPartialDesignatedItems partial_qty=partial_quantity}}</p>
    {{#each item.setItem.items as |item|}}
      {{partial 'items/set_item_block'}}
    {{/each}}
  {{else}}
    <p>{{t "designate.partial_designate_title" code=order.code qty=totalPartialDesignatedItems partial_qty=partial_quantity}}</p>
    {{partial 'orders/item_block_without_link'}}
  {{/if}}

{{/message-box}}

{{#message-box btn1Text=(t "okay") btn1Callback=(action "designatePartialItem") btn2Text=(t "cancel") isVisible=partiallyDesignatedPopUp classNames="popupOverlay designate-form"}}

  {{#if (is-and item.isSet (is-equal item.isSet (is-equal item.isSet returnsDesignateFullSet)))}}
    {{#each item.setItem.items as |item|}}
      {{partial 'items/set_item_block'}}
    {{/each}}
    {{#each designatedSetOrdersPackages as |ordersPackage|}}
      <div class="warnings">
        <div class="warning_text">
          <div class="left-icon"><i>{{fa-icon 'exclamation-triangle'}}</i></div>
          <div class="right-message">
            <div>{{t "designate_form.warning_text"
              state=ordersPackage.state
              totalQty=(js-add ordersPackage.quantity partial_quantity) designationCode=ordersPackage.designation.code
              qty=ordersPackage.quantity
              pkgState= ordersPackage.state
              inventoryNumber=ordersPackage.item.inventoryNumber
              }}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    {{partial 'orders/item_block_without_link'}}
    <div class="warnings">
      <div class="warning_text">
        <div class="left-icon"><i>{{fa-icon 'exclamation-triangle'}}</i></div>
        <div class="right-message">
          <div>{{t "designate_form.warning_text_without_link"
            state=designatedRecord.state
            totalQty=(js-add totalPartialDesignatedItems partial_quantity)
            orderCode=order.code
            qty=totalPartialDesignatedItems
            designatedState= designatedRecord.state
            }}
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{/message-box}}

{{#message-box btn1Text=(t "okay") btn1Callback=(action "designateItem") btn2Text=(t "cancel") isVisible=displayUserPrompt classNames="popupOverlay designate-form"}}
  {{#if (is-equal isSet "true")}}
    <p>{{t "designate_form.designate_to" orderCode=order.code}}</p>
    {{#each item.setItem.items as |item|}}
      {{partial 'items/set_item_block'}}
    {{/each}}

    <div class="warnings">
      {{#if item.setItem.multiQuantitySet}}
        <div class="warning_text">
          <i>{{fa-icon 'exclamation-triangle'}}</i>
          {{t "designate_form.designate_entire"}}
        </div>
      {{/if}}
    </div>
  {{else}}
    <p>{{t "designate.form_title" status=designationDetails.status code=order.code}}</p>
    {{partial 'orders/item_block_without_link'}}
    <div class="warnings">
      {{#if (is-greater item.quantity 1)}}
        <div class="warning_text">
          <i>{{fa-icon 'exclamation-triangle'}}</i>
          {{t "designate.quantity" quantity=item.quantity}}
        </div>
      {{/if}}

      {{#if item.isSet}}
        <div class="warning_text">
          <div class="left-icon"><i>{{fa-icon 'exclamation-triangle'}}</i></div>
          <div class="right-message">
            <div class= "designate-message">{{t "designate_form.designate_part"}}</div>
          </div>
        </div>
      {{/if}}

      {{#if (is-equal designationDetails.status "Re-designate")}}
        <div class="warnings">
          <div class="warning_text">
              <div class="left-icon">
                <i>{{fa-icon 'exclamation-triangle'}}</i>
              </div>
              <div>
                {{#link-to 'orders.active_items' designationDetails.orderId classNames='warning_link_to' replace=true}}
                  {{t "designate.item_already_designated" orderCode=designationDetails.orderCode}}
                {{/link-to}}
              </div>
          </div>
        </div>
      {{/if}}
    </div>
  {{/if}}

{{/message-box}}

{{#message-box btn1Text=(t "okay") isVisible=reDesignateDispatchAlertPopUp classNames="popupOverlay designate-form"}}
  <p>Item already dispatched to {{dispatchedItemOrder.code}}</p>
  {{partial 'orders/item_block_without_link'}}
  <div class="warnings">
    <div class="warning_text">
        <div class="left-icon">
          <i>{{fa-icon 'exclamation-triangle'}}</i>
        </div>
        <div>
          {{#link-to 'orders.active_items' dispatchedItemOrder.id classNames='warning_link_to' replace=true}}
            {{t "designate.item_dispatched" orderCode=dispatchedItemOrder.code}}
          {{/link-to}}
        </div>
    </div>
  </div>
{{/message-box}}

