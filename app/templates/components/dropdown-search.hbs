<div class="dropdown-wrapper">
  {{searchable-select
    content=(mut (get resourceType content))
    sortBy="name"
    optionLabelKey="tag"
    selected=(if displayPage (mut (get selectedDataDisplay content)) selected )
    addLabel= displayLabel
    prompt="Select an option"
    on-change=(action "setSelected" content)
    on-add= (if addAble (action "addNew" content) "")
  }}
  <div class="dropdown-icon"> {{fa-icon 'chevron-down'}}</div>
</div>
