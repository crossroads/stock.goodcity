<span {{action 'resetValueAndToggleOverlay'}} class="split-quantity">
  <i aria-hidden="true">{{fa-icon 'clone'}}</i>
  {{t "split_quantity.title"}}
</span>

{{#message-box isVisible=displayChooseQtyOverlay classNames="popupOverlay split-popup"}}
  <div class="split-item-header">{{t "split_quantity.header"}}</div>
  <div class="split-item-info">{{t "split_quantity.info_1"}}</div>
  <div class="split-item-info">{{t "split_quantity.info_2"}}</div>
  <div class="row quantity-fields">
    <div class="small-4 medium-4 large-4 columns" {{action 'incrementQty'}}>
      <span class="icon increment-btn-icon"><i>{{fa-icon 'plus-circle' size="2x"}}</i></span>
    </div>
    <div class="small-4 medium-4 large-4 columns">
      {{numeric-input id='qtySplitter' name="qty" value=1 maxlength="3" required='true' pattern="\d{1,8}" autoFocus=true}}
    </div>
    <div class="small-4 medium-4 large-4 columns" {{action 'decrementQty'}}>
      <span class="icon decrement-btn-icon"><i>{{fa-icon 'minus-circle' size="2x"}}</i></span>
    </div>
  </div>
  {{#if showErrorMessage}}
    <div class="error-box">
      <i>{{fa-icon 'exclamation-triangle'}}</i>
      {{t "split_quantity.warning" qty=item.quantity}}
    </div>
  {{/if}}
  <div class="row">
    <div class="small-6 columns">
      <button {{ action "resetValueAndToggleOverlay"}} class="button expand dont-split-btn">{{t 'not_now'}}</button>
    </div>
    <div class="small-6 columns">
      <button {{ action "splitItems"}} class="button expand split-item-btn">{{t "split_quantity.btn"}}</button>
    </div>
  </div>
{{/message-box}}
