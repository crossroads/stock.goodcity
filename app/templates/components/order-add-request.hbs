<div class="row detail-section">
  <div class="columns small-12">
    <div class="row req-first-row">
      <div class="columns small-4 request-quantity">Quantity </div>
      <div class="columns small-6 request-value">
        {{request-inline-input name="quantity" class="numeric-input item-width small-3 columns" value=request.quantity maxlength="5"  request=request}}
      </div>
      <div class='small-2 columns icon-center'>
        <i class='icon' {{action "deleteRequest" request.id on="click"}}>{{fa-icon 'times-circle' size="2x"}}</i>
      </div>
    </div>
    <div class="row req-second-row">
      <div class="columns small-4 request-type">Type </div>
      <div class="columns small-8 request-value">
        <div class="columns small-8 request-value" {{action 'assingPackageType' request.id}}>
          {{input value=request.code.name class="item-type" disabled=true}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row detail-section">
  <div class="columns small-12">
    <div class="row req-third-row">
      <div class="columns small-4 request-desc">Description </div>
      <div class="columns small-8 value request-description">
        {{request-description-textarea data-autoresize=true name="description" value=request.description pattern=".*\S.*" class="description-textarea" request=request}}
      </div>
    </div>
  </div>
</div>
<div class="after-req-line row">
  <hr/>
</div>
