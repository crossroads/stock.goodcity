<div class="item-search small-9 columns" align="center">
  {{#popup-overlay open=open}}
    <div class="row fixed_search_header search-box ui items-search">
      <div class="small-3 large-3 columns ">
        <i class="back_icon" aria-hidden="true" {{ action 'cancel' }}>{{fa-icon 'angle-left' size='2x'}}</i>
      </div>
      <div class="columns {{if isMobileApp 'small-7 large-9' 'small-9 large-9'}} ">
        {{focus-textfield
          name="search-text"
          id="search-text"
          placeholder=(t "search_min")
          value=searchText }}

        {{#if hasSearchText}}
        <i {{action "clearSearch"}}>{{fa-icon 'times-circle'}}</i>
        {{/if}}
      </div>
    </div>

    <section class="main-section items_search_result">
      <div class="row search">
        <div class="small-12 columns">
          {{#if displayResults}}
          {{#infinite-list height="85vh" loadMore=(action "loadMoreItems") as |items| }}
          {{#each items as |item|}}
            <div class="item" {{action 'showMessagePopup' item}}>
              <div class="row">
                {{partial "items/item_status_bar"}}
                <div class="row other_details item_details">
                  <div class="small-3 large-2 columns image">
                    <img src={{item.thumbImageUrl}} class="thumb" alt="" />
                  </div>
                  {{partial 'items/item_description'}}
                </div>
              </div>
            </div>
          {{/each}}
          {{/infinite-list}}
          {{else}}
          <div class='no_result'>{{t "no_search_results"}}</div>
          {{/if}}
        </div>
      </div>
    </section>
  {{/popup-overlay}}
</div>
