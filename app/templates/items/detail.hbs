<section class="main-section item_details_screen">
  <div class="search">
    <div class="row profile_container">
      {{#link-to "items.index" tagName='span' href=false}}
        <div class="click-action-zone">
          <div class="back_link no-avatar">
            <i aria-hidden="true">{{fa-icon 'angle-left'}}</i>
          </div>
        </div>
      {{/link-to}}
      <div id="itemImage">
        {{image-zoom item=model}}
        <div class="image-overlay {{if showSetList 'opaque' 'transparent' }}">
          {{#if model.isSet}}
            {{partial 'items/detail/set_header' }}
          {{/if}}
          <div style="visibility: {{if showSetList 'hidden' 'visible' }}">
            {{partial 'items/detail/tabs'}}
          </div>
        </div>
      </div>
      <div class="image-action-list">
        {{#unless (is-or model.hasAllPackagesDispatched model.hasAllPackagesDesignated)}}
          {{#if model.quantity}}
            {{#if (is-not model.isSet)}}
              {{#if model.isSingletonItem}}
                {{#link-to 'items.search_order' model.id (query-params isSet=model.isSet partial_qty=1) tagName='span' href=false}}
                  <span class="no-avatar">
                    <i aria-hidden="true">{{fa-icon 'shopping-basket'}}</i>
                  </span>
                {{/link-to}}
              {{else}}
                {{!-- Disabling partial quantity designate --}}
                {{!-- {{#link-to 'items.partial_designate' model.id (query-params isSet=model.isSet) tagName='span' href=false}}
                  <span class="no-avatar" {{action 'partialDesignateForSet'}}>
                    <i aria-hidden="true">{{fa-icon 'shopping-basket'}}</i>
                  </span>
                {{/link-to}} --}}
              {{/if}}
            {{/if}}
          {{/if}}
        {{/unless}}

        {{#unless model.isSet}}
          {{#if (is-and item.hasOneDesignatedPackage (is-not model.hasAllPackagesDispatched))}}
            <div class="{{unless item.hasOneDesignatedPackage 'disabled'}}">
              {{#if (is-and model.isSingletonItem model.designation.isGoodCityOrder)}}
                <div class="no-avatar">
                  <a href="#" {{action 'dispatchOrdersPackagePopUp' model model.firstDesignatedOrdersPackage.id}} >
                    <i class="item-menu">{{fa-icon 'ship'}}</i>
                  </a>
                </div>
              {{else}}
                {{!-- Disabling partial quantity dispatch --}}
                {{!-- {{#link-to 'items.partial_dispatch' item.id (query-params orderPackageId=model.firstDesignatedOrdersPackage.id) tagName='div' href=false}}
                  <span class="no-avatar">
                    <i aria-hidden="true">{{fa-icon 'ship'}}</i>
                  </span>
                {{/link-to}} --}}
              {{/if}}
            </div>
          {{/if}}
        {{/unless}}

        {{#if item.allowLabelPrint}}
          {{#print-label item=item closeList=""}}
            <span class="no-avatar">
              <i aria-hidden="true">{{fa-icon 'print'}}</i>
            </span>
          {{/print-label}}
        {{/if}}
      </div>
    </div>

    <div class="main-content {{if showSetList 'opaque' 'transparent' }}">
      {{#if showSetList}}
        {{partial 'items/detail/set_list' }}
      {{else}}
        {{!-- TAB CONTENT --}}
        {{partial (concat 'items/detail/tabs/' tabName) }}
      {{/if}}
    </div>

  </div>

  {{partial "items/sticky_footer"}}
</section>

