{{#toggle-item-options-list item=item}}
  <div class="row detail-section">
    <div class="columns small-9">
      <div class="row">
        <div class="columns small-4">{{t "item_details.quantity"}}</div>
        <div class="columns small-3 value item-quantity">
          {{item.quantity}}
        </div>
        <div class="columns small-5 value">
          {{#if (is-greater item.quantity 1)}}
            {{quantity-chooser item=item}}
          {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="columns small-4">{{t "item_details.type"}} </div>
        <div class="columns small-8 value">
          {{#if isPackageTypeEditable}}
            {{input value=item.code.name class="item-type" disabled=true}}
          {{else}}
            {{#link-to 'items.search_code' item.id}}
              {{input value=item.code.name class="item-type" disabled=true}}
            {{/link-to}}
          {{/if}}
        </div>
      </div>

    </div>
    <div class="columns small-3">
      {{#link-to 'items.edit_images' item.id}}
        <img src={{item.thumbImageUrl}} class="thumb"/>
      {{/link-to}}
    </div>
  </div>
{{/toggle-item-options-list}}

<div class="row detail-section">
  {{#toggle-item-options-list item=item}}
    <div class="columns small-12">
      <div class="row">
        <div class="columns small-3">{{t 'item_details.description'}} </div>
        <div class="columns small-9 value description">
          {{#form-control}}
            {{item-description-textarea data-autoresize=true name="notes" value=item.notes required="required" pattern=".*\S.*" id=(concat 'desc' item.id) class="description-textarea" item=item}}
            <div class='description-error'>{{t 'item_details.validation_errors.description'}}</div>
          {{/form-control}}
        </div>
      </div>
    </div>
  {{/toggle-item-options-list}}
</div>

{{#toggle-item-options-list item=item}}
  <div class="row detail-section">
    <div class="columns small-12">
      <div class="row">
        <div class="columns small-3">{{t 'item_details.quality'}} </div>
        <div class="columns small-3 value quality">
          <div class="select-quality">
            <span class='input_text'>{{t 'item_details.grade'}}</span>
            {{inline-select-list
              content=grades
              on-change=(action (mut selectedReason))
              name="grade"
              autosave=true
              isPrimitive=true
              id=(concat 'grd' item.id)
              class="grade-margin"
              item=item}}
          </div>
        </div>
        <div class="columns small-6 value condition-field">
          <div class="select-condition">
            <span class='input_text'>{{t 'item_details.condition'}}</span>
            {{inline-select-list
              content=conditions
              on-change=(action (mut selectedReason))
              name="donorCondition"
              item=item
              autosave=true
              id=(concat 'cnd' item.id)
              class="condition-margin"}}
          </div>
        </div>
      </div>
      <div class="row">
        {{donation-field item=item caseNumber=item.caseNumber}}
      </div>
      <div class="row">
        <div class="columns small-3">{{t "item_details.size"}}</div>
        <div class="columns small-3 value">
          L: {{numeric-inline-input id=(concat 'qty' item.id) name="length" class="numeric-input item-length small-3" value=item.length maxlength="5" item=item}}
          <span><i aria-hidden="true">{{fa-icon 'times'}}</i></span>
        </div>

        <div class="columns small-3 value">
          W: {{numeric-inline-input id=(concat 'wth' item.id) name="width" class="numeric-input item-width small-3" value=item.width maxlength="5"  item=item}}
          <span><i aria-hidden="true">{{fa-icon 'times'}}</i></span>
        </div>

        <div class="columns small-3 value">
          H: {{numeric-inline-input id=(concat 'hgt' item.id) name="height" class="numeric-input item-height small-3" value=item.height maxlength="5" item=item}}
        </div>
      </div>
      <div class="row">
        <div class="columns small-3 weight-field">
          <span class='input_text'>{{t 'item_details.weight'}}</span>
        </div>
        <div class="columns small-3 value weight-field">
          {{numeric-inline-input
            id=(concat 'wgt' item.id)
            name="weight"
            class="numeric-input item-weight small-3"
            value=item.weight
            maxlength="10"
            item=item}}
        </div>
        {{#if showPieces}}
          <div class="columns small-3 pieces-field">
            <span class='input_text'>{{t 'item_details.pieces'}}</span>
          </div>
          <div class="columns small-3 value pieces-field">
            {{numeric-inline-input
              id=(concat 'pcs' item.id)
              name="pieces"
              class="numeric-input item-pieces small-3"
              value=item.pieces
              maxlength="10"
              item=item}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
{{/toggle-item-options-list}}
{{#if isPackageTypeEditable}}
  <hr>
  <div class="row additional-selected-values">

    {{#each displayFields as |fields|}}
    <div class="small-6 columns input-field-container disable">
      <div class="row">
        <div class="small-12 columns item-label">
          {{fields.label}}
        </div>
        <div class="small-12 columns left input-fields">
          {{#form-control}}
          {{#if (is-and fields.autoComplete (is-not-equal fields.name 'country'))}}
          {{dropdown-search addAble=fields.addAble displayPage=true selectedValuesDisplay=selectedValuesDisplay packageDetails=fetchPackageDetails content=fields.name onConfirm=(action 'setFields')
            detailType=item.detailType detailId=item.detail.id}}
          {{else if (is-equal fields.name 'country')}}
          <div class="dropdown-wrapper">
            {{searchable-select
                content=countryArray
                sortBy="name"
                optionLabelKey="nameEn"
                on-change=(action "setCountryValue")
                selected=selectedCountry
                prompt=""
                on-open=(action "openDropDown")
                on-search=(action "onSearch")}}
            <div class="dropdown-icon"> {{fa-icon 'chevron-down'}}</div>
          </div>
          {{else}}
          {{additional-fields-input id=fields.name name=fields.name type="text" class="inline-input additional-input" value=(mut (get (get selectedValuesDisplay fields.name) 'tag')) item=item detailType=item.detailType detailId=item.detail.id}}
          {{/if}}
          {{/form-control}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{/if}}
