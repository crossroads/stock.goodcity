<div class="row fixed_search_header search-box ui organisations_search">
  <div class="small-2 medium-2 columns ">
    <a {{action "cancelSearch"}} class="back">
      <i class="back_icon" aria-hidden="true">{{fa-icon 'angle-left'}}</i>
      <div class="back_text">
        {{t 'back'}}
      </div>
    </a>
  </div>

  <div class="small-10 medium-10 columns">
    {{focus-textfield
      name="searchText"
      id="searchText"
      placeholder=(t "search_organisation")
      value=searchText
      disabled=false}}

    {{#if hasSearchText}}
      <i {{action "clearSearch"}}>{{fa-icon 'times-circle'}}</i>
    {{/if}}
  </div>
</div>

<section class="main-section organisation_search_result">
  <div class="row search">
    <div class="small-12 columns">
      {{infinite-list
        searchText= searchedText
        partialName = 'gc_organisations'
        model = 'gc_organisation'
        per_page = 15
      }}
    </div>

  </div>
  {{partial "sticky_footer"}}
</section>

