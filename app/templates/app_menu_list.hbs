<nav class="tab-bar white_border_bottom">
  <section class="middle tab-bar-section">
    {{#if stockAppVersion}}
      <h1> {{t 'version'}}{{stockAppVersion}}</h1>
    {{else}}
      <h1 class="title">
        {{t 'menu'}}
      </h1>
    {{/if}}
  </section>
</nav>
<div class="row search">
  <div class="small-12 columns">
    <ul class="list list-activity menu-list">
      {{!-- {{#unless isMobileApp}} --}}
      <li class="menu-list">
        {{language-switcher}}
      </li>
      {{!-- {{/unless}} --}}
      <li class="menu-list">
        <a href="#" class="menu-list-anchor" {{action 'logMeOut'}}>
          {{fa-icon 'sign-out-alt' size="lg"}}&nbsp;&nbsp;{{t "logout.logout"}}
        </a>
      </li>
      {{#if (is-or session.currentUser.isSupervisor getCurrentUser.isSupervisor)}}
        <li class="menu-list">
          {{#link-to 'search_organisation' class="menu-list-anchor"}}
            {{fa-icon 'user-cog' size="lg"}}&nbsp;&nbsp;{{t "manage_charity_users"}}
          {{/link-to}}
        </li>
      {{/if}}
      <li class="menu-list">
        <span href="#" class="menu-list-anchor" {{action 'createInventory' "Pallet"}}>
          {{fa-icon 'pallet' size="lg"}}&nbsp;&nbsp;{{t "create_new_pallet"}}
        </span>
      </li>
      <li class="menu-list">
        <span href="#" class="menu-list-anchor" {{action 'createInventory' "Box"}}>
          {{fa-icon 'box-open' size="lg"}}&nbsp;&nbsp;{{t "create_new_box"}}
        </span>
      </li>
      <li class="menu-list">
        <span href="#" class="menu-list-anchor" {{action 'createInventory' "Package"}}>
          {{fa-icon 'tag' size="lg"}}&nbsp;&nbsp;{{t "create_new_item"}}
        </span>
      </li>
      {{#if (is-or session.currentUser.canManageAppointments getCurrentUser.canManageAppointments)}}
        <li class="menu-list">
          {{#link-to 'appointments' class='appointments-link menu-list-anchor'}}
            {{fa-icon 'calendar-alt' size="lg"}}&nbsp;&nbsp;{{t 'manage_inventory'}}
          {{/link-to}}
        </li>
        <li class="menu-list">
          <a href="#" class="menu-list-anchor" {{action 'createOrder'}}>
            {{fa-icon 'shopping-basket' size="lg"}}&nbsp;&nbsp;{{t 'new_order'}}
          </a>
        </li>
      {{/if}}
    </ul>
  </div>
</div>
{{partial "sticky_footer"}}
