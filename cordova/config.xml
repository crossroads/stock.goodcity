<?xml version='1.0' encoding='utf-8'?>
<widget id="hk.goodcity.stockstaging" version="0.0.1" android-versionCode="0" ios-CFBundleVersion="0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>S. Stock</name>
    <description>
    GoodCity Stock Application
  </description>
  <author href="https://www.crossroads.org.hk">Crossroads</author>
  <content src="index.html" />
  <hook src="scripts/update_build_number.py" type="before_prepare" />
  <access origin="*" />
  <preference name="DisallowOverscroll" value="true" />
  <platform name="android">
    <preference name="LoadUrlTimeoutValue" value="120000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="Orientation" value="portrait"/>

    <icon src="res/android/drawable-ldpi/icon.png" density="ldpi"/>
    <icon src="res/android/drawable-mdpi/icon.png" density="mdpi"/>
    <icon src="res/android/drawable-hdpi/icon.png" density="hdpi"/>
    <icon src="res/android/drawable-xhdpi/icon.png" density="xhdpi"/>
    <icon src="res/android/drawable-xxhdpi/icon.png" density="xxhdpi"/>
    <icon src="res/android/drawable-xxxhdpi/icon.png" density="xxxhdpi"/>

    <splash src="res/android/drawable-ldpi/screen.png" density="port-ldpi"/>
    <splash src="res/android/drawable-mdpi/screen.png" density="port-mdpi"/>
    <splash src="res/android/drawable-hdpi/screen.png" density="port-hdpi"/>
    <splash src="res/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
    <splash src="res/android/drawable-xxhdpi/screen.png" density="port-xxhdpi"/>
    <splash src="res/android/drawable-xxxhdpi/screen.png" density="port-xxxhdpi"/>
  </platform>
  <platform name="ios">
    <icon src="res/ios/Icon-App-60x60@3x.png" width="180" height="180"/>
    <icon src="res/ios/Icon-App-60x60@1x.png" width="60" height="60"/>
    <icon src="res/ios/Icon-App-60x60@2x.png" width="120" height="120"/>
    <icon src="res/ios/Icon-App-76x76@1x.png" width="76" height="76"/>
    <icon src="res/ios/Icon-App-76x76@2x.png" width="152" height="152"/>
    <icon src="res/ios/Icon-App-40x40@1x.png" width="40" height="40"/>
    <icon src="res/ios/Icon-App-40x40@2x.png" width="80" height="80"/>
    <icon src="res/ios/Icon-App-57x57@1x.png" width="57" height="57"/>
    <icon src="res/ios/Icon-App-57x57@2x.png" width="114" height="114"/>
    <icon src="res/ios/Icon-App-72x72@1x.png" width="72" height="72"/>
    <icon src="res/ios/Icon-App-72x72@2x.png" width="144" height="144"/>
    <icon src="res/ios/Icon-App-29x29@1x.png" width="29" height="29"/>
    <icon src="res/ios/Icon-App-29x29@2x.png" width="58" height="58"/>
    <icon src="res/ios/Icon-App-50x50@1x.png" width="50" height="50"/>
    <icon src="res/ios/Icon-App-50x50@2x.png" width="100" height="100"/>

    <splash src="res/ios/Default-320x480.png" width="320" height="480"/>
    <splash src="res/ios/Default-640x960.png" width="640" height="960"/>
    <splash src="res/ios/Default-640x1136.png" width="640" height="1136"/>
    <splash src="res/ios/Default-750x1334.png" width="750" height="1334"/>
    <splash src="res/ios/Default-1242x2208.png" width="1242" height="2208"/>
    <splash src="res/ios/Default-768x1024.png" width="768" height="1024"/>
    <splash src="res/ios/Default-1536x2048.png" width="1536" height="2048"/>

    <feature name="StatusBar">
      <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="Orientation" value="portrait"/>
    <preference name="Fullscreen" value="true" />
  </platform>
  <engine name="ios" spec="~3.9.2" />
  <engine name="android" spec="~5.1.1" />
  <engine name="windows" spec="~4.3.1" />
  <plugin name="cordova-plugin-actionsheet" spec="https://github.com/EddyVerbruggen/cordova-plugin-actionsheet.git"/>
  <plugin name="cordova-plugin-camera" spec="~2.1.0"/>
  <plugin name="cordova-plugin-device" spec="~1.1.1"/>
  <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
  <plugin name="cordova-plugin-statusbar" spec="~2.1.1" />
  <plugin name="cordova-plugin-splashscreen" spec="~3.1.0"/>
  <plugin name="phonegap-plugin-barcodescanner" spec="https://github.com/Telerik-Verified-Plugins/BarcodeScanner.git"/>
  <plugin name="com-sarriaroman-PhotoViewer" spec="https://github.com/sarriaroman/photoviewer.git"/>
</widget>
